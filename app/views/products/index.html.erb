<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>List of Categories</th>
      <th>Subcategories</th>
      <th>Location</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
    <tr>
      <td>
        <%= product.list_of_categories %>
      </td>

      <td>
        <%= product.subcategories %>
      </td>

      <td>
        <%= product.location %>
      </td>

      <td>
        <%= link_to 'Show', product %>
      </td>

      <td>
        <%= link_to 'Edit', edit_product_path(product) %>
      </td>

      <td>
        <%= link_to "Destroy", product, data: { 'turbo-method': :delete, 'turbo-confirm': 'Are you sure?' } %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New product", new_product_path, class: "btn btn-secondary" %>

